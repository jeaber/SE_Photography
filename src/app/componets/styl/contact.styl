

.contact
  padding 0 1em
.contact form {
  margin: 0 auto;
  width 40em
  max-width 90%
}

.contact form p, .contact label,.contact p {
  font-style: italic;
}

.contact .halfsies > .form-group {
  width: 48%;
}

.contact .halfsies > .form-group > input {
  width: 100%;
  height: 30px;
}

.contact label {
  color: slategrey;
  font-weight: 400;
  line-height: 1.25em;
  margin: 5px 0 5px 0;
}

.contact textarea {
}

.contact .open {
  color: #00df64;
}

.contact .booked {
  color: #FF6347;
}

.contact .unknown {
  color: #0097d5;
}

.contact h3 {
  text-align: center;
}
