#default img
  -webkit-transition all 1s ease-in-out
  -moz-transition all 1s ease-in-out
  -o-transition all 1s ease-in-out
  transition all 1s ease-in-out

#default img:hover
  opacity .75

#default a > img
  width 100%;
  overflow hidden
#default
  background-color white
nav ul, nav
  width 100%
  margin 0 auto
  margin-left -.5em

nav ul li
  width 100%
  text-align center

nav *
  font-family 'Merriweather', sans-serif
  font-weight 400
  color slategrey !important
  font-size 14px
  list-style none
  display inline-block

nav ul li a
  padding 0 !important

nav
  position absolute

.nav>li>a:focus, .nav>li>a:hover
  color darkslategray
  text-decoration underline !important
  background-color transparent !important

.nav-justified
  table-layout fixed

.nav-justified:before
  display none

.nav-justified:after
  display none